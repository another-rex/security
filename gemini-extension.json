{
  "name": "gemini-cli-security",
  "version": "0.3.0",
  "contextFileName": "GEMINI.md",
  "mcpServers": {
    "securityServer": {
      "command": "node",
      "args": [
        "${extensionPath}/mcp-server/dist/security.js"
      ]
    },
    "osvServer": {
      "command": "docker",
      "args": [
        "run",
        "-v",
        "${PWD}:${PWD}",
        "-i",
        "-e",
        "--rm",
        "ghcr.io/google/osv-scanner:nightly",
        "experimental-mcp"
      ],
      "timeout": 300000
    }
  }
}
